{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "NestJS",
  "extends": "./base.json",
  "compilerOptions": {
    /* NestJS specific */
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "ES2022",

    /* Decorators — required for NestJS */
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,

    /* Emit */
    "outDir": "./dist",
    "declaration": true,
    "removeComments": true,
    "allowSyntheticDefaultImports": true,
    "incremental": true,
    "tsBuildInfoFile": "./.tsbuildinfo",
    "sourceMap": true,

    /* Path aliases — override per project */
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@/modules/*": ["./src/modules/*"],
      "@/common/*": ["./src/common/*"],
      "@/config/*": ["./src/config/*"],
      "@/database/*": ["./src/database/*"],
      "@/guards/*": ["./src/guards/*"],
      "@/interceptors/*": ["./src/interceptors/*"],
      "@/pipes/*": ["./src/pipes/*"],
      "@/decorators/*": ["./src/decorators/*"]
    }
  },
  "include": ["src/**/*.ts"],
  "exclude": [
    "node_modules",
    "dist",
    "test",
    "coverage",
    "**/*.spec.ts",
    "**/*.e2e-spec.ts"
  ]
}
