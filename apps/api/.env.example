# ═══════════════════════════════════════════════════════════
# E-Commerce API — Environment Variables
# ═══════════════════════════════════════════════════════════

# ─────────────────────────────────────────────────────────
# Database
# ─────────────────────────────────────────────────────────
DATABASE_URL="postgresql://ecommerce:ecommerce_secret@localhost:5432/ecommerce_dev?schema=public"

# ─────────────────────────────────────────────────────────
# Redis
# ─────────────────────────────────────────────────────────
REDIS_URL="redis://localhost:6379"

# ─────────────────────────────────────────────────────────
# Authentication (JWT)
# ─────────────────────────────────────────────────────────
JWT_SECRET="your-jwt-secret-change-me-in-production"
JWT_REFRESH_SECRET="your-jwt-refresh-secret-change-me-in-production"

# ─────────────────────────────────────────────────────────
# Stripe
# ─────────────────────────────────────────────────────────
STRIPE_SECRET_KEY="sk_test_..."
STRIPE_WEBHOOK_SECRET="whsec_..."

# ─────────────────────────────────────────────────────────
# AWS S3
# ─────────────────────────────────────────────────────────
AWS_S3_BUCKET="ecommerce-uploads-dev"
AWS_ACCESS_KEY_ID="your-aws-access-key-id"
AWS_SECRET_ACCESS_KEY="your-aws-secret-access-key"

# ─────────────────────────────────────────────────────────
# Email (SMTP)
# ─────────────────────────────────────────────────────────
SMTP_HOST="smtp.mailtrap.io"
SMTP_PORT=2525
SMTP_USER="your-smtp-user"
SMTP_PASS="your-smtp-password"

# ─────────────────────────────────────────────────────────
# Application
# ─────────────────────────────────────────────────────────
PORT=3001
NODE_ENV="development"
CORS_ORIGIN="http://localhost:3000"
