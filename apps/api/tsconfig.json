{
  "extends": "@ecommerce/tsconfig/nestjs.json",
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "./dist",
    "paths": {
      "@/*": ["./src/*"],
      "@/modules/*": ["./src/modules/*"],
      "@/common/*": ["./src/common/*"],
      "@/config/*": ["./src/config/*"],
      "@/database/*": ["./src/database/*"],
      "@/guards/*": ["./src/guards/*"],
      "@/interceptors/*": ["./src/interceptors/*"],
      "@/pipes/*": ["./src/pipes/*"],
      "@/decorators/*": ["./src/decorators/*"]
    }
  },
  "include": ["src/**/*.ts"],
  "exclude": [
    "node_modules",
    "dist",
    "test",
    "coverage",
    "**/*.spec.ts",
    "**/*.e2e-spec.ts"
  ]
}
