# https://editorconfig.org
root = true

# ── Default for all files ────────────────────────────────
[*]
charset = utf-8
end_of_line = lf
indent_style = space
indent_size = 2
insert_final_newline = true
trim_trailing_whitespace = true
max_line_length = 100

# ── Markdown — trailing whitespace has meaning ───────────
[*.md]
trim_trailing_whitespace = false
max_line_length = 80

[*.mdx]
trim_trailing_whitespace = false
max_line_length = 80

# ── Makefiles require tabs ───────────────────────────────
[Makefile]
indent_style = tab

# ── YAML ─────────────────────────────────────────────────
[*.{yaml,yml}]
indent_size = 2

# ── JSON ─────────────────────────────────────────────────
[*.json]
indent_size = 2
insert_final_newline = false

# ── Shell scripts ────────────────────────────────────────
[*.sh]
indent_size = 2
end_of_line = lf

# ── Python (if any scripts) ──────────────────────────────
[*.py]
indent_size = 4

# ── Docker ───────────────────────────────────────────────
[Dockerfile*]
indent_size = 4

# ── Prisma ───────────────────────────────────────────────
[*.prisma]
indent_size = 2

# ── Environment files ────────────────────────────────────
[.env*]
insert_final_newline = true
